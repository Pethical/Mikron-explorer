@using NanoDotNet
@using System.Numerics


@model IEnumerable<AccountHistoryItem>
@{
    ViewBag.Title = "Account history";
}


<div style="margin-top:50px"></div>
<h3>
    Account @Request.Params["address"] history
</h3>
<div class="row">
    <div class="col-md-12">
        <table class="table table-responsive table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>Account</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Hash</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                <tr>
                    <td>
                        @x.Account
                    </td>
                    <td>
                        @x.Type
                    </td>
                    
                    <td class="text-right">@String.Format("{0:n} MIKRON", (x.Amount.Raw / 10000000000))</td>
                                        
                    <td>
                        @x.Hash
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>