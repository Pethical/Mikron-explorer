@using NanoDotNet
@using System.Numerics
@model MikronExplorerWeb.Controllers.Data

@{
    ViewBag.Title = "Home Page";
}

<div style="margin-top:40px"></div>
<h1>MIKRON Addresses</h1>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-responsive table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Address</th>
                            <th class="text-right">Balance</th>
                            <th class="text-right">Owned percentage</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.data)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Account", "Home", new { address = x.Key })">
                                        @x.Key
                                    </a>
                                </td>
                                <td class="text-right">@String.Format("{0:n} MIKRON", (x.Value.Balance.Raw / 10000000000))</td>
                                <td class="text-right">@(Math.Round(((((decimal)x.Value.Balance.Raw) * 100M) / ((decimal)Model.all)), 5)) %</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
