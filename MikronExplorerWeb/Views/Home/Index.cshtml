@using NanoDotNet
@using System.Numerics
@model MikronExplorerWeb.Controllers.Data

@{
    ViewBag.Title = "MIKRON Számla felfedező";
}
@{
    int counter = 1;
}

<div style="margin-top:40px"></div>
<h1 class="text-center">MIKRON számlák</h1>
<div class="row">
       <div  class="col-md-6 col-md-offset-3" style="margin-bottom:20px"><form action="http://mikron-explorer.csillamfejleszto.hu/Home/Account"><input style="width:470px;max-width:80%" type="text" name="address" placeholder="Cím"/><input type="submit" value="Keresés"/></form></div>
</div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            <td>#</td>
                            <th>Cím</th>
                            <th class="text-right">Egyenleg</th>
                            <th class="text-right">Hány százalékot tulajdonol</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.data)
                        {
                            <tr>
                                <td class="text-center">@counter.</td>
                                <td><a class="mono" href="@Url.Action("Account", "Home", new { address = x.Key })">@x.Key</a></td>
                                <td class="text-right">@String.Format("{0:n4} MIKRON", (((decimal)x.Value.Balance.Raw) / 10000000000M))</td>
                                <td class="text-right">@(Math.Round(((((decimal)x.Value.Balance.Raw) * 100M) / ((decimal)Model.all)), 5).ToString("F5")) %</td>
                            </tr>
                           counter++;
                        }
                    </tbody>
                </table></div>
            </div>
        </div>
<style>
.mono{
  font-family: monospace;
}
</style>